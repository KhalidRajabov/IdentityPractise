@model RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center">

  <div class="col-lg-6">
                            <div class="login-reg-form-wrap signup-form">
                                <h2>Singup Form</h2>
                                <form  method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="single-input-item d-flex flex-column">
                                        <input placeholder="Full Name" asp-for="Fullname"/> 
                                        <span asp-validation-for="Fullname" class="text-danger"></span>
                                    </div>
                                    <div class="single-input-item d-flex flex-column">
                                        <input placeholder="Username" asp-for="Username"/> 
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                    <div class="single-input-item d-flex flex-column">
                                        <input asp-for="Email" placeholder="Enter your Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="single-input-item d-flex flex-column">
                                                <input asp-for="Password" placeholder="Enter your Password" />
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="single-input-item d-flex flex-column">
                                                <input asp-for="ConfirmPassword" placeholder="Repeat your Password" />
                                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="single-input-item">
                                        <button type="submit" class="btn">Register</button>
                                    </div>
                                </form>
                            </div>
                        </div>

</div>
