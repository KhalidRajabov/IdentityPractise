@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">


     <div class="col-lg-6">
                            <div class="login-reg-form-wrap">
                                <h2>Sign In</h2>
                                <form  method="post">
                                    <div class="single-input-item">
                                        <input asp-for="Email" placeholder="Email or Username" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="single-input-item">
                                        <input asp-for="Password" placeholder="Enter your Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="single-input-item">
                                        <div class="login-reg-form-meta d-flex align-items-center justify-content-between">
                                            <div class="remember-meta">
                                                <div class="custom-control custom-checkbox">
                                                    <input asp-for="RememberMe" class="custom-control-input" >
                                                    <label class="custom-control-label" asp-for="RememberMe"></label>
                                                </div>
                                            </div>
                                            <a href="#" class="forget-pwd">Forget Password?</a>
                                        </div>
                                    </div>
                                    <div class="single-input-item">
                                        <button class="btn">Login</button>
                                    </div>
                                </form>
                            </div>
                        </div>



</div>